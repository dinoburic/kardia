generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id  Int @id @default(autoincrement())
  name  String?
  email String  @unique
  password  String
  createdAt DateTime  @default(now())
}

model Measurement {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  heartRate   Int
  spo2        Int
  temperature Float
  movement    Float
  source      String   @default("device")
}

